<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <div class="field">
    <%= f.label :total_price %>
    <%= f.text_field :total_price, :disabled => true %>
  </div>

  <% if current_user.is_admin == 1 %>
  <div class="field">
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, User.all, :id, :email) %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :room_id %>
    <%= f.collection_select(:room, Room.all, :id, :number) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
