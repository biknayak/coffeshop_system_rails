<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Room</th>
      <th>Image</th>
      <th>Extension</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name + " " + user.last_name  %></td>
        <td>
          <% if user.room_id %>
            <%= Room.find(user.room_id).number %>
          <% end %>
        </td>
        <td><img src="<%= user.avatar %>" alt="" class="img-thumbnail"></td>
        <td><%= user.extension %></td>
        <td><%= link_to 'Details',   person_path(user) %></td>
        <td><%= link_to 'Edit', edit_person_path(user) %></td>
        <td><%= link_to 'Delete', person_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

