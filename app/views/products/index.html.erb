<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody >
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
       <td><img src="<%= product.Image.url %>" alt="product_img" class="img-thumbnail" style="width:100px;"></td>
        <td><%= product.price %></td>
        <td><%= product.status %></td>
        <td>
          <a style="cursor:pointer" class="toggle_status" id="<%= product.id %>"><%= product.status == 'available' ? 'unavailable' : 'available' %></a>
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
